<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="false">
    <layer-list>

      <item android:right="5dp" android:top="5dp">
        <shape>
          <corners android:radius="5dp"/>
          <solid android:color="#00a766"/>
        </shape>
      </item>

      <item android:bottom="2dp" android:left="2dp">
        <shape>
          <gradient android:angle="270" android:endColor="#FFFFFF" android:startColor="#FFFFFF"/>
          <stroke android:width="1dp" android:color="#00a766"/>
          <corners android:radius="5dp"/>
          <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
        </shape>
      </item>

    </layer-list>
  </item>

  <item android:state_pressed="true">
    <layer-list>

      <item android:right="5dp" android:top="5dp">
        <shape>
          <corners android:radius="5dp"/>
          <solid android:color="#00a766"/>
        </shape>
      </item>

      <item android:bottom="2dp" android:left="2dp">
        <shape>
          <gradient android:angle="270" android:endColor="#7C97C1" android:startColor="#FFFFFF"/>
          <stroke android:width="1dp" android:color="#00a766"/>
          <corners android:radius="5dp"/>
          <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
        </shape>
      </item>

    </layer-list>
  </item>
</selector>
